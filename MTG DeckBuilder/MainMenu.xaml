<Page x:Class="MTG_DeckBuilder.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MTG_DeckBuilder"
      mc:Ignorable="d"
      Title="MainMenu" Height="550" Width="1025">
    <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="../Fonts/GoudyMediaeval-Regular.ttf #Goudy" />
        </Style>
    </Page.Resources>
        <StackPanel>
        <Image Source="../File/Resources/mtg.png" Height="250" Width="250" Margin="0, 35, 0, 15"/>
        <Label x:Name="lblTitle" Content="MTG Deck Builder" HorizontalAlignment="Center" FontSize="45" FontFamily="#Goudy"/>
        <Button Cursor="Hand" Content="Login" Click="btnLogin_Click" Height="45" Width="150" Margin="5"/>
        <Button Cursor="Hand" Content="Create Account" Click="btnCreateAccount_Click" Height="45" Width="150" Margin="5"/>
        <Button Cursor="Hand" Content="Exit" Click="btnExit_Click" Height="45" Width="150" Margin="5"/>
    </StackPanel>
</Page>
